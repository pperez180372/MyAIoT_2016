<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.muiinf.pperez.myaiot.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout


        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/rellenodi"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <LinearLayout
           android:padding="@dimen/rellenodi"
            android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/Tit_nombre_servidor" android:id="@+id/textViewservername" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="     " android:id="@+id/textView6" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="XXXX1111"  android:id="@+id/textView10" />

    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/rellenodi">

            <TextView android:layout_width="wrap_content"             android:layout_height="wrap_content"
                android:text="@string/Tit_nombre_dispositivo"            android:id="@+id/textViewdevicename" />
            <TextView  android:layout_width="wrap_content"             android:layout_height="wrap_content" android:text="  "               android:id="@+id/textView7" />
            <TextView android:layout_width="wrap_content"                  android:layout_height="wrap_content"                    android:text="1122334455" android:id="@+id/textView18" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/rellenodi">

            <TextView android:layout_width="wrap_content"             android:layout_height="wrap_content"
                android:text="@string/Tit_nombre_variable"            android:id="@+id/textViewnombrevariable" />
            <TextView  android:layout_width="wrap_content"             android:layout_height="wrap_content" android:text="  "               android:id="@+id/textView7" />
            <TextView android:layout_width="wrap_content"                  android:layout_height="wrap_content"                    android:text="1122334455" android:id="@+id/textView18" />
        </LinearLayout>







    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/rellenodi"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="175dp">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/Grafica">
        </FrameLayout>


    </LinearLayout>
        <LinearLayout
            android:padding="@dimen/rellenodi"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="LED1"
                android:id="@+id/buttonled1" />
            <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="LED2"
                android:id="@+id/buttonled2" />
            <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="LED3"
                android:id="@+id/buttonled3" />
            <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="LED4"
                android:id="@+id/buttonled4" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
